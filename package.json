		"@threlte/core": "5.0.8",
		"@threlte/extras": "4.9.3",
		"@tweakpane/core": "^1.1.9",
		"@types/ackee-tracker": "^5.0.2",
		"@types/glob": "^8.1.0",
		"@types/three": "0.148.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@zerodevx/svelte-img": "^2.1.0",
		"date-fns": "^2.30.0",
		"eslint": "^8.47.0",
